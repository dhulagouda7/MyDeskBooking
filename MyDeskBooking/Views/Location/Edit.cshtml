@model BookMyDesk.Models.EntityModels.Location
@{
    ViewBag.Title = "Edit Location";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h4>Edit Location</h4>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.LocationId)

                        <div class="mb-3">
                            <label class="form-label">Location Name</label>
                            @Html.TextBoxFor(m => m.LocationName, new { @class = "form-control", required = "required", maxlength = "100" })
                            @Html.ValidationMessageFor(m => m.LocationName, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Address</label>
                            @Html.TextAreaFor(m => m.Address, new { @class = "form-control", required = "required", maxlength = "255", rows = "3" })
                            @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
