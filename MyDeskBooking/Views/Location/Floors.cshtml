@model IEnumerable<BookMyDesk.Models.EntityModels.Floor>
@{
    ViewBag.Title = "Browse Floors";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2>Floors at @ViewBag.BuildingName</h2>
        <a href="@Url.Action("Buildings", new { locationId = ViewBag.LocationId })" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Buildings
        </a>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4 mt-2">
        @foreach (var floor in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Floor @floor.FloorNumber</h5>
                        <div class="mt-3">
                            <p class="mb-1">Total Desks: @(floor.Desks?.Count ?? 0)</p>
                            <p class="mb-1">Available Desks: @(floor.Desks?.Count(d => d.Status == "Available" && !d.IsReserved) ?? 0)</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
